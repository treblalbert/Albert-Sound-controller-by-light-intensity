{
  "name": "webcam-volume-widget",
  "version": "1.0.0",
  "description": "Webcam volume control widget",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build:dir": "electron-builder --win --dir"
  },
  "author": "Albert",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "loudness": "^0.4.2"
  },
  "build": {
    "appId": "com.albert.webcam-volume-widget",
    "productName": "Webcam Volume Widget",
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "WebcamVolumeWidget.exe"
    }
  }
}
